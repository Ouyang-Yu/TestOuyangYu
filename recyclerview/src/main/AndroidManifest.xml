<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.recyclerview">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="玩转非遗"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/statusBarTransparent">
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"></activity>
        <activity android:name=".DownloadActivity" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MyWebActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".homeFragment.MainActivity" />
        </activity>
        <activity
            android:name=".MovieActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".RecordActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".homeFragment.MainActivity" />
        </activity>
        <activity android:name=".chat.Chat">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".homeFragment.MainActivity" />
        </activity>
        <activity android:name=".clause">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Login" />
        </activity>
        <activity android:name=".Login" />
        <activity
            android:name=".BSTActivity"
            android:theme="@style/statusBarRed">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".homeFragment.MainActivity" />
        </activity>

        <meta-data
            android:name="com.baidu.lbsapi.API_KEY"
            android:value="7CU7fb70cwlHx0smVTAuyuQGCcoURiK3" />

        <activity
            android:name=".FruitActivity"
            android:theme="@style/statusBarTransparent" />
        <activity android:name=".ListView.ListViewActivity" />
        <activity
            android:name=".homeFragment.MainActivity"
            android:theme="@style/statusBarRed" />

        <service
            android:name="com.baidu.location.f"
            android:enabled="true"
            android:process=":remote" />
        <service
            android:name=".DownloadService"
            android:enabled="true"
            android:exported="true" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.recyclerview.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">

            <!-- name属性值固定，authorities属性值必须和FileProvider.getUriForFile()方法中的第二个参数一致 -->
            <!-- 使用<meta-data>来指定Uri的共享路径 -->
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>