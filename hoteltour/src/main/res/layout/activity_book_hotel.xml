<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    android:background="@color/bg_color"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:id="@id/rl_title" android:background="@color/home_color" android:layout_width="fill_parent" android:layout_height="50.0dip">
        <TextView
            android:textSize="20.0sp"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:id="@id/tv_book_name"
            android:padding="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="酒店名称" />
        <ImageView
            android:id="@id/iv_back"
            android:background="@drawable/back_onclick"
            android:padding="10.0dip"
            android:paddingLeft="20.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22.0dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <TextView
        android:textSize="20.0sp"
        android:textColor="#ff000000"
        android:gravity="center"
        android:id="@id/tv_title"
        android:padding="20.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:text="请填写预订信息"
        android:layout_below="@id/rl_title" />
    <LinearLayout
        android:id="@id/ll_book_hotel_roomnum"
        android:padding="5.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:layout_below="@id/tv_title">
        <TextView
            android:textSize="18.0sp"
            android:textColor="#ff000000"
            android:padding="5.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="房 间 数  : " />
        <EditText
            android:id="@id/edt_book_hotel_roomnum"
            android:background="@drawable/search_edittext_shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="160.0dip"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/ll_book_hotel_username"
        android:padding="5.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2.0dip"
        android:layout_below="@id/ll_book_hotel_roomnum">
        <TextView
            android:textSize="18.0sp"
            android:textColor="#ff000000"
            android:padding="5.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="入 住 人  : " />
        <EditText
            android:id="@id/edt_book_hotel_username"
            android:background="@drawable/search_edittext_shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="160.0dip" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/ll_book_hotel_phonenum"
        android:padding="5.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2.0dip"
        android:layout_below="@id/ll_book_hotel_username">
        <TextView
            android:textSize="18.0sp"
            android:textColor="#ff000000"
            android:padding="5.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系电话 :" />
        <EditText android:id="@id/edt_book_hotel_phonenum"
            android:background="@drawable/search_edittext_shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="160.0dip"
            android:inputType="number" />
    </LinearLayout>
    <LinearLayout
        android:id="@id/ll_book_hotel_tile"
        android:padding="5.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2.0dip"
        android:layout_below="@id/ll_book_hotel_phonenum">
        <TextView
            android:textSize="18.0sp"
            android:textColor="#ff000000"
            android:padding="5.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预定时间 :" />
        <EditText android:id="@id/edt_book_hotel_time"
            android:background="@drawable/search_edittext_shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="160.0dip"
            android:inputType="number" />
    </LinearLayout>
    <LinearLayout
        android:id="@id/ll_book_hotel_remarks"
        android:padding="5.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2.0dip"
        android:layout_below="@id/ll_book_hotel_tile">
        <TextView
            android:textSize="18.0sp"
            android:textColor="#ff000000"
            android:padding="5.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备      注   :" />
        <EditText
            android:id="@id/edt_book_hotel_remarks"
            android:background="@drawable/search_edittext_shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="160.0dip"
            android:hint="可不选"
            android:inputType="number" />
    </LinearLayout>
    <TextView
        android:textSize="20.0sp"
        android:textColor="#ff000000"
        android:id="@id/tv_discount"
        android:paddingLeft="5.0dip"
        android:paddingTop="10.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5.0dip"
        android:text="优惠券:  无可用"
        android:layout_below="@id/ll_book_hotel_remarks" />
    <TextView
        android:textSize="20.0sp"
        android:textColor="#ff000000"
        android:id="@id/tv_rank_discount"
        android:paddingLeft="5.0dip"
        android:paddingTop="10.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5.0dip"
        android:text="积分抵扣:  无可用积分"
        android:layout_below="@id/tv_discount" />
    <Button
        android:layout_gravity="center_horizontal"
        android:id="@id/btn_book_hotel"
        android:background="@drawable/button_state"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="确认预订"
        android:layout_alignParentBottom="true" />
</RelativeLayout>