<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <com.example.hoteltour.SearchView
        android:id="@id/ll_search"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="280.0dip"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="10.0dip">

                <TextView
                    android:id="@id/tv_experience_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2.0dip"
                    android:text="名称"
                    android:textSize="16.0sp" />

                <ImageView
                    android:id="@id/img_experience_1"
                    android:layout_width="280.0dip"
                    android:layout_height="160.0dip"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@id/tv_experience_time1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2.0dip"
                    android:text="时间"
                    android:textSize="16.0sp" />

                <TextView
                    android:id="@id/tv_experience_address1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2.0dip"
                    android:text="地点"
                    android:textSize="16.0sp" />

                <TextView
                    android:id="@id/tv_experience_money1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2.0dip"
                    android:text="费用"
                    android:textSize="16.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="280.0dip"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="10.0dip">

                <TextView
                    android:id="@id/tv_experience_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2.0dip"
                    android:text="名称"
                    android:textSize="16.0sp" />

                <ImageView
                    android:id="@id/img_experience_2"
                    android:layout_width="280.0dip"
                    android:layout_height="160.0dip"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@id/tv_experience_time2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2.0dip"
                    android:text="时间"
                    android:textSize="16.0sp" />

                <TextView
                    android:id="@id/tv_experience_address2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2.0dip"
                    android:text="地点"
                    android:textSize="16.0sp" />

                <TextView
                    android:id="@id/tv_experience_money2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2.0dip"
                    android:text="费用"
                    android:textSize="16.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="280.0dip"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@id/tv_experience_name3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2.0dip"
                    android:text="名称"
                    android:textSize="16.0sp" />

                <ImageView
                    android:id="@id/img_experience_3"
                    android:layout_width="280.0dip"
                    android:layout_height="160.0dip"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@id/tv_experience_time3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2.0dip"
                    android:text="时间"
                    android:textSize="16.0sp" />

                <TextView
                    android:id="@id/tv_experience_address3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2.0dip"
                    android:text="地点"
                    android:textSize="16.0sp" />

                <TextView
                    android:id="@id/tv_experience_money3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2.0dip"
                    android:text="费用"
                    android:textSize="16.0sp" />
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_below="@id/tv_title"
        android:layout_marginTop="2.0dip"
        android:background="#33212121" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5.0dip"
        android:text="我的喜好"
        android:textSize="16.0sp" />

    <Button
        android:id="@id/btn_like"
        android:layout_width="30.0dip"
        android:layout_height="30.0dip"
        android:layout_marginLeft="10.0dip"
        android:background="@drawable/button_state"
        android:text="+" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5.0dip"
        android:text="用户评论" />

    <ListView
        android:id="@id/lv_experience"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
</LinearLayout>